version: '3.8'
services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "80:80"
    volumes:
      - ./:/var/www/html  # Sincronizar todo el código fuente
      - ./storage:/var/www/html/storage  # Persistir el directorio storage
      - ./public:/var/www/html/public # Persistir el directorio public
    user: laravel:laravel # Ejecutar el contenedor como el usuario laravel
    depends_on:
      - database # Si usas base de datos
    networks:
      - my-network # Si usas networks
    # Comando para ejecutar después de que el contenedor esté corriendo
    command: sh -c "if [ ! -f /var/www/html/.env ]; then cp /var/www/html/.env.example /var/www/html/.env; fi && php-fpm"
  database:
    image: mysql:8.0 # O la imagen que uses para tu base de datos
    ports:
      - "3306:3306"
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_DATABASE: laravel
      MYSQL_USER: user
      MYSQL_PASSWORD: password
    networks:
      - my-network
networks:
  my-network:
    driver: bridge